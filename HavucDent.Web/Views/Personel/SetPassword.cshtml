@model HavucDent.Web.Models.SetPasswordViewModel

@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifre Belirle</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            position: relative;
            top: -10vh; 
        }

        .card {
            border-radius: 10px;
            max-width: 500px;
            width: 100%;
        }

        .card-header {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>Şifre Belirle</h4>
        </div>
        <div class="card-body">
            <form id="setPasswordForm" action="/Account/SetPassword" method="post">
                <input name="__RequestVerificationToken" type="hidden" value="@ViewData["RequestVerificationToken"]" />

                <div class="mb-3">
                    <label for="Password" class="form-label">Yeni Şifre</label>
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Yeni Şifrenizi Girin" />
                    <div class="invalid-feedback" id="passwordError"></div>
                </div>

                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label">Şifreyi Doğrula</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Şifrenizi Doğrulayın" />
                    <div class="invalid-feedback" id="confirmPasswordError"></div>
                </div>

                <input type="hidden" name="UserId" value="@Model.UserId" />

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Şifreyi Belirle</button>
                    <a href="/Account/Login" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Şifre Kurallarını Doğrula
            $('#Password').on('input', function () {
                var password = $(this).val();
                var passwordError = $('#passwordError');
                var pattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{8,}$/;

                if (!pattern.test(password)) {
                    passwordError.text('Şifre en az 8 karakter uzunluğunda, bir büyük harf, bir küçük harf ve bir rakam içermelidir.').show();
                    $(this).addClass('is-invalid');
                } else {
                    passwordError.hide();
                    $(this).removeClass('is-invalid');
                }
            });

            // Şifre Eşleşmesini Doğrula
            $('#ConfirmPassword').on('input', function () {
                var confirmPassword = $(this).val();
                var password = $('#Password').val();
                var confirmPasswordError = $('#confirmPasswordError');

                if (confirmPassword !== password) {
                    confirmPasswordError.text('Şifreler eşleşmiyor.').show();
                    $(this).addClass('is-invalid');
                } else {
                    confirmPasswordError.hide();
                    $(this).removeClass('is-invalid');
                }
            });

            // Formu Gönderirken Kontrol Et
            $('#setPasswordForm').on('submit', function (e) {
                if ($('#Password').hasClass('is-invalid') || $('#ConfirmPassword').hasClass('is-invalid')) {
                    e.preventDefault();
                }
            });
        });
    </script>
</body>
</html>